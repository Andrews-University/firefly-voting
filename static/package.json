{
  "name": "firefly-client",
  "version": "1.0.0",
  "description": "Client to the firefly polling application",
  "author": "webstrand",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "concurrently -k \"yon run dev-js -w\" \"yon run dev-html\"",
    "dev-js": "rollup -w -c rollup.config.js",
    "dev-html": "pug -w -O '{ pretty: \"\\t\" }' index.pug monitor.pug admin.pug -o dist",
    "build": "yon run build-js; yon run build-html",
    "build-js": "rollup -c rollup.config.js",
    "build-html": "pug -O '{ pretty: \"\\t\" }' index.pug monitor.pug admin.pug -o dist"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.0.1",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-strip": "^1.2.1",
    "@rollup/plugin-typescript": "^3.0.0",
    "@types/socket.io-client": "^1.4.32",
    "@types/url-parse": "^1.4.3",
    "concurrently": "^5.1.0",
    "pug": "^2.0.4",
    "pug-cli": "^1.0.0-alpha6",
    "rollup": "^1.31.1",
    "s-js": "^0.4.9",
    "socket.io-client": "^2.3.0",
    "surplus": "0.5.x",
    "surplus-mixin-data": "0.5.x",
    "tslib": "*",
    "typescript": "^3.8.2",
    "url-parse": "^1.4.7",
    "yarn-or-npm": "^3.0.1"
  }
}
