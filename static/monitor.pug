doctype html
html(xmlns="http://www.w3.org/1999/xhtml" lang="en")

	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover, user-scalable=no")
		title Vote for the Golden Cardinal
		link(rel="shortcut icon" type="image/png" href="img/favicon.png")
		script(type="application/javascript" src="monitor.js" defer)
		link(rel="stylesheet" type="text/css" href="css/bootstrap.css")
		link(rel="stylesheet" type="text/css" href="css/animate.css")
		style(type="text/css").
			body { background-color: #000; }
			.firefly-container {
				padding: 40px 0 40px 0;
			}
			.firefly-title {
				text-align: center;
				color: #c99843;
				font-family: Helvetica;
				margin: 10px 0 20px 0;
			}
			.firefly-category {
				display: none;
			}
			.firefly-category.running {
				display: block;
			}
			.firefly-category-title {
				text-align: center;
				color: #c99843;
				font-family: Helvetica;
			}
			.firefly-layout {
				margin-top: 30px;
				display: flex;
				align-items: center;
				justify-content: center;
			}
			.firefly-tile {
				flex: 1;
				transition: flex-grow 0.3s ease-out;
				min-width: 0;
				max-height: 70vh;
				flex-grow: 1;
				text-align: center;
			}
			.firefly-tile > img {
				vertical-align: bottom;
				max-height: 70vh;
			}
			.firefly-tile-counter {
				white-space: nowrap;
				background-color: #000;
				color: #c99843;
				font-family: Helvetica;
			}

	mixin firefly-tile(id, src)
		.firefly-tile(data-id=id)
			img.img-fluid.animated(src=src)
			.firefly-tile-counter
				h2
					span.firefly-tile-counter-value 0
					|  votes
	mixin firefly-category(id, title, a, b, c, d)
		section.firefly-category(data-id=id)
			h2.firefly-category-title #{title}
			.firefly-layout
				+firefly-tile(0, a)
				+firefly-tile(1, b)
				+firefly-tile(2, c)
				if d
					+firefly-tile(3, d)
	body
		.firefly-container
			h1.firefly-title(onclick="document.body.requestFullscreen()") Golden Cardinal Awards!
			+firefly-category(0, "Best Regalia",                     "img/regailia/sonia-small.svg", "img/regailia/vern_byrd-small.svg", "img/regailia/beverly-small.svg", "img/regailia/ryan_hayes-small.svg")
			+firefly-category(1, "Best Office Fit Break",            "img/break/arboretum.svg", "img/break/crayon-box.svg", "img/break/gia-ceis.svg", "img/break/transportation.svg")
			+firefly-category(2, "Best Employee on a Skateboard",    "img/skateboard/melissa-bolle.svg", "img/skateboard/don.svg", "img/skateboard/melissa-poua.svg", "img/skateboard/jason.svg")
			+firefly-category(3, "Best Southern Accent",             "img/accent/fares.svg", "img/accent/alisa.svg", "img/accent/luxton.svg", "img/accent/stefanie.svg")
			+firefly-category(4, "Best Samâ€™s Chicken Dipping Sauce", "img/sauce/janet.svg", "img/sauce/diane.svg", "img/sauce/pablo.svg", "img/sauce/carlisle.svg")
			+firefly-category(5, "Best World Climate Changer",       "img/climate/valencia-finance.svg", "img/climate/doug-graphic-design.svg", "img/climate/angela-biology.svg", "")
