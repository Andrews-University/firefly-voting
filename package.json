{
  "name": "firefly-voting",
  "version": "2.0.0",
  "description": "Live audience polling web-application with a separate live display of candidate rank for projection.",
  "main": "index.js",
  "author": "webstrand",
  "license": "MIT",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^13.9.0"
  },
  "scripts": {
    "start": "node --es-module-specifier-resolution=node dist/src/index.js",
