    "build": "tsc",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "nodemonConfig": {
    "ignore": [
      "static/**/*"
    ]
  },
  "dependencies": {
    "@types/better-sqlite3": "^5.4.0",
    "@types/morgan": "^1.7.37",
    "@types/sqlite3": "^3.1.6",
    "better-sqlite3": "^6.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/node": "^13.7.6",
    "@types/socket.io": "^2.1.4",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "nodemon": "^2.0.2",
    "typescript": "^3.8.2"
  }
